<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Tigrisek" Height="450" Width="800"
        Icon="Kepek/tiger-icon.png">

    <Window.Background>
        <ImageBrush ImageSource="Kepek/csikok.png"/>
    </Window.Background>

    <DockPanel LastChildFill="True" Margin="10">

        <!-- Felső nagy Border -->
        <Border DockPanel.Dock="Top"
                Height="80"
                CornerRadius="10"
                Margin="10">
            <Border.Background>
                <RadialGradientBrush>
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="White" Offset="1"/>
                </RadialGradientBrush>
            </Border.Background>

            <TextBlock Text="Tigrisek"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="36"
                       FontFamily="Book Antiqua"
                       Foreground="White"
                       FontWeight="Bold"/>
        </Border>


        
        
        <Border DockPanel.Dock="Bottom"
                Height="30"
                CornerRadius="10"
                Margin="10"
                Background="Black"
                BorderBrush="White"
                BorderThickness="1">
            <TextBlock Text="Készítette: Forgács Péter"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="18"/>
        </Border>

        
        
        

        <Border DockPanel.Dock="Left"
                CornerRadius="10"
                Margin="10"
                Padding="10"
                Background="Black">

            <StackPanel>
                <TextBlock Text="Rendszertani besorolás"
                           Foreground="White"
                           FontSize="18"/>
                <Separator/>

                <TextBlock Text="Ország: Állatok" Foreground="White"/>
                <Separator/>

                <TextBlock Text="Törzs: Gerincesek" Foreground="White"/>
                <Separator/>

                <TextBlock Text="Osztály: Emlősök" Foreground="White"/>
                <Separator/>

                <TextBlock Text="Rend: Ragadozók" Foreground="White"/>
                <Separator/>

                <TextBlock Text="Család: Macskafélék" Foreground="White"/>
                <Separator/>

                <TextBlock Text="Alcsalád: Párducformák" Foreground="White"/>
            </StackPanel>

        </Border>

        
        
        
        <Border DockPanel.Dock="Top"
                Background="Black"
                CornerRadius="10"
                Margin="10,10,10,0"
                Padding="5">
            <TextBlock Text="Alfajok"
                       Foreground="White"
                       FontSize="18"
                       HorizontalAlignment="Center"/>
        </Border>


        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <WrapPanel>

                <StackPanel Background="White" Margin="5">
                    <Image Source="Kepek/bengali.jpg"
                           Width="150"
                           Margin="10,10,10,0"/>
                    <TextBlock Text="Bengáli tigris"
                               HorizontalAlignment="Center"
                               Padding="10,5"/>
                </StackPanel>

                <StackPanel Background="White" Margin="5">
                    <Image Source="Kepek/sziberiai.jpg"
                           Width="150"
                           Margin="10,10,10,0"/>
                    <TextBlock Text="Szibériai tigris"
                               HorizontalAlignment="Center"
                               Padding="10,5"/>
                </StackPanel>

                <StackPanel Background="White" Margin="5">
                    <Image Source="Kepek/malaj.jpg"
                           Width="150"
                           Margin="10,10,10,0"/>
                    <TextBlock Text="Maláj tigris"
                               HorizontalAlignment="Center"
                               Padding="10,5"/>
                </StackPanel>

            </WrapPanel>
        </ScrollViewer>

    </DockPanel>

</Window>
