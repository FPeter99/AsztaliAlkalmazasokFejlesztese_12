<Window x:Class="tarskereso.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:tarskereso"
        mc:Ignorable="d"
        Title="Login" Height="849" Width="1277">

    <Grid>
        <!-- Háttér kép + blur -->
        <Image Source="kepek/bg.jpg"
               Stretch="UniformToFill">
            <Image.Effect>
                <BlurEffect Radius="40"/>
            </Image.Effect>
        </Image>

        <!-- Fő layout Grid -->
        <Grid>

            <!-- 5 oszlop -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- 5 sor -->
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <!-- TeenDer cím -->
            <Border Grid.Row="0"
                    Grid.Column="1"
                    Grid.ColumnSpan="3"
                    Margin="20"
                    CornerRadius="25"
                    BorderThickness="2"
                    BorderBrush="#80FFFFFF"
                    Background="#40FFFFFF"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    Height="120">
                <TextBlock Text="TEENDER"
                           FontSize="55"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           TextAlignment="Center"
                           FontFamily="Segoe UI"/>
            </Border>



            <Grid Grid.Row="1" Grid.Column="2">
                <TextBlock Text="Login"
                           FontSize="60"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top"
                           Margin="0,0,10,0"/>
            </Grid>

            <!-- email -->

            <Grid Grid.Row="2" Grid.Column="2" Margin="0,0,0,10">
                <StackPanel VerticalAlignment="Top" HorizontalAlignment="Stretch">

                    <TextBox Height="40"
                 FontSize="22"
                 FontWeight="Bold"
                 VerticalContentAlignment="Center"
                 HorizontalContentAlignment="Center"
                 Text="Email"
                 IsReadOnly="True"
                 Background="Transparent"
                 BorderThickness="0"
                 Foreground="#FFFFFFFF"/>


                    <TextBox Height="35"
                 FontSize="16"
                 VerticalContentAlignment="Center"
                 Margin="0,5,0,0"
                 Padding="5"
                 Background="#20FFFFFF"
                 BorderBrush="#80FFFFFF"
                 BorderThickness="1"
                 Foreground="White"
                 Name="EmailTextBox"/>
                </StackPanel>
            </Grid>




            <!-- Jelszó -->
            <!-- email -->

            <Grid Grid.Row="3" Grid.Column="2" Margin="0,0,0,10">
                <StackPanel VerticalAlignment="Top" HorizontalAlignment="Stretch">

                    <TextBox Height="40"
                 FontSize="22"
                 FontWeight="Bold"
                 VerticalContentAlignment="Center"
                 HorizontalContentAlignment="Center"
                 Text="Password"
                 IsReadOnly="True"
                 Background="Transparent"
                 BorderThickness="0"
                 Foreground="#FFFFFFFF"/>


                    <PasswordBox Height="35"
                 FontSize="16"
                 VerticalContentAlignment="Center"
                 Margin="0,5,0,0"
                 Padding="5"
                 Background="#20FFFFFF"
                 BorderBrush="#80FFFFFF"
                 BorderThickness="1"
                 Foreground="White"
                 Name="PasswordBox"/>
                </StackPanel>
            </Grid>

            <!-- Bejelentkezés gomb -->
            <Grid Grid.Row="4" Grid.Column="2">
                <StackPanel VerticalAlignment="Top" HorizontalAlignment="Stretch">
                    <Button 
                        Content="Login"
                        Height="40"
                        Width="200"
                        FontSize="16"
                        FontWeight="Bold"
                        Background="#FF4CAF50"
                        Foreground="White"
                        BorderThickness="0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Margin="0,0,0,10"
                        Click="LoginTry"
                    />
                    <Button Content="Register"
                        Height="35"
                        FontSize="16"
                        FontWeight="Bold"
                        Background="Transparent"
                        Foreground="BlueViolet"
                        BorderThickness="0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Cursor="Hand"
                        Click="Register_Click"
                    />

                </StackPanel>
            </Grid>





        </Grid>
    </Grid>
</Window>
